<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/buffer_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buffer_bar"
        android:layout_above="@+id/seek_bar_container"
        android:padding="16dp"
        android:gravity="center">

        <cat.xojan.random1.ui.view.CroppedImageView
            android:id="@+id/image"
            android:layout_width="@dimen/player_image_size"
            android:layout_height="@dimen/player_image_size"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/gradient_background"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seek_bar_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/player_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/player"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_pause"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/player_buttons"
            android:layout_toEndOf="@+id/player_buttons">

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_alignParentBottom="true"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>